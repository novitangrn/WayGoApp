<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.waygo.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_rundown"
        android:name="com.example.waygo.ui.rundown.CustomRundown"
        android:label="@string/title_dashboard"
        tools:layout="@layout/activity_custom_rundown" />

    <fragment
        android:id="@+id/navigation_generate"
        android:name="com.example.waygo.ui.rundown.GenerateRundown"
        android:label="@string/title_notifications"
        tools:layout="@layout/activity_generate_rundown" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.waygo.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>